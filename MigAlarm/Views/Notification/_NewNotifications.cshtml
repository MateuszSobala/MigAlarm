@using MigAlarm.Helpers
@model MigAlarm.Models.Views.NotificationViewModel

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Notifications.FirstOrDefault().Event.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notifications.FirstOrDefault().NotificationAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notifications.FirstOrDefault().DateAdded)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Notifications)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Ajax.ImageActionLink(@Url.Content("~/Content/Images/start.png"), "Przyjmij", "SetActive", new {id = item.Id}, new AjaxOptions {HttpMethod = "POST"}, new { @class = "image-size" })
                @Ajax.ImageActionLink(@Url.Content("~/Content/Images/info.png"), "Szczegóły", "GetDetails", new { id = item.Id }, new AjaxOptions { OnSuccess = "loadDetails(data);" }, new { @class = "image-size" })
            </td>
        </tr>
    }
</table>