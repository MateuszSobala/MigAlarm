@model MigAlarm.Models.Views.ChangePasswordViewModel
@{
    ViewBag.Title = "Zmień hasło";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Strona główna</a></li>
    <li class="active">Zmiana hasła</li>
</ol>

@using (Html.BeginForm())
{
    <div id="base" class="">
        <fieldset>
            <div>
                <fieldset>
                    <legend>Zmień swoje hasło</legend>
                    <div class="editor-label">
                        @Html.LabelFor(u => u.Password)
                    </div>
                    <div class="editor-field">
                        @Html.PasswordFor(u => u.Password)
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(u => u.RepeatedPassword)
                    </div>
                    <div class="editor-field">
                        @Html.PasswordFor(u => u.RepeatedPassword)
                        @Html.ValidationMessageFor(u => u.RepeatedPassword)
                    </div>
                    <br />
                    <input type="submit" value="Zmień hasło" />
                </fieldset>
            </div>
        </fieldset>
    </div>
}