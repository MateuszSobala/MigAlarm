@model MigAlarm.Models.Views.LoginViewModel
@{
    ViewBag.Title = "Zaloguj się";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<ol class="breadcrumb">
    <li class="active">Logowanie</li>
</ol>

@using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <fieldset>
        <legend>Zaloguj się do systemu</legend>
    </fieldset>
    @Html.ValidationSummary(true, null, new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new {@class = "col-md-2 control-label"})
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = "Adres e-mail", tabindex = 1})
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new {@class = "col-md-2 control-label"})
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = "Hasło", tabindex = 1})
            @Html.ValidationMessageFor(m => m.Password, null, new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedInstitutionId, new { @class = "col-md-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.SelectedInstitutionId, Model.InstitutionItems, "Wybierz instytucję", new { @class = "form-control", placeholder = "Hasło", tabindex = 1 })
            @Html.ValidationMessageFor(m => m.SelectedInstitutionId, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zaloguj" class="btn btn-default"/>
        </div>
    </div>
}